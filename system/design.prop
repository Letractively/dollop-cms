sector[]=body
sector[]=desc
sector[]=link
sector[]=sublink
sector[]=menu
sector[]=site_name
;
;   LINK PROP TEMPLATE CONTENT
;################################################################################################
[LINK]
sector[]=title
sector[]=url
sector[]=target
sector[]=sublink
;
;   LINK PROP TEMPLATE CONTENT
;################################################################################################
[SUBLINK]
sector[]=title
sector[]=target
sector[]=url
;
;   MENU PROP TEMPLATE CONTENT
;################################################################################################
[MENU]
sector[]=title
sector[]=content
sector[]=sub_content
;
;   BODY PROP TEMPLATE CONTENT
;################################################################################################
[BODY]
sector[]=title
sector[]=content
sector[]=sub_content
;
;   DESC PROP TEMPLATE CONTENT
;################################################################################################
[DESC]
sector[]=content
;
;   DESC PROP TEMPLATE CONTENT
;################################################################################################
[SITE_NAME]
sector[]=content
;
;
;
