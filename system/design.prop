;   -= Theme content Configuration =-
;*********************************************************************
;
;
;   HEADER PROP INTERNAL CONTENT
;################################################################################################
[HEADER]
;
;
; Header html tags for theme
;
LANGUAGE={LANGUAGE}
CHARSET={CHARSET}
METATAGS={METATAGS}
KEYWORDS={KEYWORDS}
PAGETITLE={PAGETITLE}
CHARSET={CHARSET}
JSCRIPT={JSCRIPT}
STYLECSS={STYLECSS}
FAVICON={FAVICON}
;
;
;
;   HEADER PROP INTERNAL CONTENT
;################################################################################################
[DEF_HTML_HEADER]
